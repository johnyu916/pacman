    #print(["ready_start", state.game])

() ready_idle(object state):
    game = state.game
    ready = game.state
    elapsed = state.now - ready.time_start
    if elapsed > 1.0:
        remove_thing(game.info.children, ready.ready_text.id)
        # start playing
