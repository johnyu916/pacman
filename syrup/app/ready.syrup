() playing_start(object state):

    # dots
    state.game.score = 0
    state.game.highscore = 0
    state.game.state.status = "idle"

() playing_idle(object state):
    collisions(state)
    touching_all(state)
    stop = game_logic(state)
    if stop:
        return
    keyboard_idle(state)
    ai_idle(state)
    #print(["pacman velocity", state.pacman.velocity])


