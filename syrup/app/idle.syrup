from ready import (ready_idle, playing_idle, dying_idle)
from ai import ai_idle
() idle(object state):
    now = time()
    delta = now - state.now
    state.now = now
    state.delta = delta

    game_name = state.game.state.name

    if game_name == "ready":
        ready_idle(state)
        # display ready for 5 seconds then move to playing
    elif game_name == "playing":
        playing_idle(state)
    elif game_name == "dying":
        dying_idle(state)
